<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_system_video_player"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:gravity="center"
    tools:context="com.example.robot.a321movie.Activity.SystemVideoPlayer">

    <com.example.robot.a321movie.View.VitamioVideoView
        android:id="@+id/vitamio_VideoView"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <include layout="@layout/media_controller"/>
    <!--显示缓冲网速界面-->
    <include layout="@layout/buffer" android:id="@+id/ll_buffer"/>
    <!--加载视频等待界面-->
    <include layout="@layout/ll_loading" android:id="@+id/ll_loading"/>
</RelativeLayout>
