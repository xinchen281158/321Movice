<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.robot.a321movie.Activity.MainActivity">

    <!--标题栏-->
    <include layout="@layout/titlebar"/>
    <!--FrameLayout-->
    <FrameLayout
        android:id="@+id/fl_main"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </FrameLayout>
    
    <!--RadioGroup-->
    <RadioGroup
        android:id="@+id/rg_main"
        android:padding="8dp"
        android:orientation="horizontal"
        android:background="#11000000"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/rb_video"
            android:text="本地视屏"
            android:drawableTop="@drawable/rb_video_image_selector"
            style="@style/bottom_tag_style"/>
        <RadioButton
            android:id="@+id/rb_audio"
            android:text="本地音乐"
            android:drawableTop="@drawable/rb_audio_image_selector"
            style="@style/bottom_tag_style"/>
        <RadioButton
            android:id="@+id/rb_netvideo"
            android:text="网络视屏"
            android:drawableTop="@drawable/rb_netvideo_image_selector"
            style="@style/bottom_tag_style"/>
        <RadioButton
            android:id="@+id/rb_netaudio"
            android:text="网络音乐"
            android:drawableTop="@drawable/rb_netaudio_image_selector"
            style="@style/bottom_tag_style"/>
    </RadioGroup>
</LinearLayout>
